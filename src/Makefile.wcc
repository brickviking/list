DEBUGFLAGS = -g -O2
CC = wcc
CL = wlink
CFLAGS = -bc -wx -d3
VERSION = 0734
DISTFILE = list$(VERSION).tgz
DISTBINFILE = lstb$(VERSION).tgz
SRCDIR = src
INCDIR = -i=c:\pdcurses
LDFLAGS = 
LIBS = pdcurses.lib
OPTFLAGS = -od

OBJECTS = l.obj d.obj b.obj f.obj i.obj sh.obj sc.obj

all: list.exe

.c.obj:
	$(CC) $(CFLAGS) $(OPTFLAGS) $(INCDIR) -fo=$@ $<

l.obj: list.c
	$(CC) $(CFLAGS) $(OPTFLAGS) $(INCDIR) -fo=$@ $<

d.obj: dequeue.c
	$(CC) $(CFLAGS) $(OPTFLAGS) $(INCDIR) -fo=$@ $<

b.obj: bugwrite.c
	$(CC) $(CFLAGS) $(OPTFLAGS) $(INCDIR) -fo=$@ $<

f.obj: file.c
	$(CC) $(CFLAGS) $(OPTFLAGS) $(INCDIR) -fo=$@ $<

i.obj: input.c
	$(CC) $(CFLAGS) $(OPTFLAGS) $(INCDIR) -fo=$@ $<

sh.obj: showhelp.c
	$(CC) $(CFLAGS) $(OPTFLAGS) $(INCDIR) -fo=$@ $<

sc.obj: screen.c
	$(CC) $(CFLAGS) $(OPTFLAGS) $(INCDIR) -fo=$@ $<

list.exe: $(OBJECTS)
	$(CL) $(LDFLAGS) name list.exe file { $(OBJECTS) } libr { $(LIBS) }

clean:
	del *.obj list.exe
