DEBUGFLAGS = -g -O2
CC = wcc386
CL = wlink
CFLAGS = -bc -wx -d3
VERSION = 0737
DISTFILE = list$(VERSION).tgz
DISTBINFILE = lstb$(VERSION).tgz
SRCDIR = src
INCDIR = c:\pdcurses
LDFLAGS = 
LIBS = pdcurses.lib
OPTFLAGS = -od

OBJECTS = list.obj dequeue.obj bugwrite.obj file.obj input.obj showhelp.obj screen.obj

all: list.exe

.c.obj:
	$(CC) $(CFLAGS) $(OPTFLAGS) -i=$(INCDIR) -fo=$@ $<

list.exe: $(OBJECTS)
	$(CL) $(LDFLAGS) @list.lnk

clean: .symbolic
	del *.obj list.exe
